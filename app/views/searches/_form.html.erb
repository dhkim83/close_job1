<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for @search, :method => :post, :url => searches_path do |f| %>
    <%= f.label "What" %>
    <%= f.text_field :query, :placeholder => "ruby" %>

    <%= fields_for @location do |loc_field| %>
      <%= loc_field.label "Where" %>
      <%= loc_field.text_field :name, :placeholder => "santa monica" %>
    <% end %>

    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>
  
<p>Type locations, separated by commas</p>
</div>